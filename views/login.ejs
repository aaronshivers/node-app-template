<% include partials/top %>

<div class="container mt-3">
	
	<h1 class="text-center"><%= title %></h1>

	<form method="POST">
		
		<div class="form-group">
			<label for="username">Username</label>
			<input class="form-control" type="text" name="username" placeholder="Username..." autocomplete="username" required>
		</div>

		<div class="form-group">
			<label for="password">Password</label>
			<input class="form-control" type="password" name="password" placeholder="Username..." autocomplete="current-password" required>
		</div>

		<button class="btn btn-outline-dark btn-lg btn-block">Login</button>

	</form>

</div>

